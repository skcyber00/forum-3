{% extends 'templates/template.twig' %}

{% block body %}

{% include 'sections/profil-menu.twig' %}

<div class="col-lg-9">
    <div class="row justify-content-md-end">
        <div class="col-lg-12 ">
            <div class="card shadow-sm p-3 mb-3 bg-white rounded">
                <div class="card-body nav-link" style="color:rgb(110, 110, 110);">
                    <h4 class="card-title">Mes Sujets</h4>
                </div>
            </div>
        </div>
    </div>

    {% for sujet in sujets|slice(0, 10) %}
        <div class="row justify-content-md-end">
            <div class="col-lg-12 ">
                <div class="card shadow-sm p-3 mb-3 bg-white rounded">
                    <div class="card-body nav-link" style="color:rgb(110, 110, 110);">
                        <h5 class="card-title">{{ sujet.sujet_title }}</h5>
                        <p class="card-text">{{ sujet.sujet_text }}</p>
                        <p class="card-text"><b>{{ sujet.membre.memb_nom }} {{ sujet.membre.memb_prenom }}</b> <small class="text-muted">publi√© le {{ sujet.created_at }}</small></p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>

{% endblock %}