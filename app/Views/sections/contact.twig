{% extends 'templates/template.twig' %}

{% block body %}

    <div class="container">
        <div class="col-12 pb-4 mb-md-3">

            {% include 'layout/response.twig' %}

            <form action="{{ path_for('contact') }}" method="POST">

                {{ csrf() }}

                <div class="form-group{% if flash.errors.name %} has-error{% endif %}">
                    <label for="name">Votre nom</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{ old.name }}">
                    {% if flash.errors.name %}
                        <span class="help-block text-danger">{{ flash.errors.name }}</span>
                    {% endif %}
                </div>
                <div class="form-group{% if flash.errors.email %} has-error{% endif %}">
                    <label for="email">Votre email</label>
                    <input type="email" class="form-control" name="email" id="email" value="{{ old.email }}" required>
                    {% if flash.errors.email %}
                        <span class="help-block text-danger">{{ flash.errors.email }}</span>
                    {% endif %}
                </div>
                <div class="form-group{% if flash.errors.content %} has-error{% endif %}">
                    <label for="content">Votre message</label>
                    <textarea type="text" class="form-control" name="content" id="content">{{ old.content }}</textarea>
                    {% if flash.errors.content %}
                        <span class="help-block text-danger">{{ flash.errors.content }}</span>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Envoyer">
                </div>

            </form>

            <p>Contact : support@test.fr</p>
        </div>

